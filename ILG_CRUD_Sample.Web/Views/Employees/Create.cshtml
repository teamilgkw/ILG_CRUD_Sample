@model ILG_CRUD_Sample.BusinessLogic.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Create Employee";
}
<div>
    <h2>Create Employee</h2>
</div>
<form asp-controller="Employees" asp-action="Create" enctype="multipart/form-data">

    <div class="row">

        <div class="col-md-10">
            <div class="form-group">
                <input asp-for="ID" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
    
        </div>
    </div>
    <br />
    <input type="submit" class="btn btn-info" value="Save" />
    <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-info ">Cancel</a>
</form>