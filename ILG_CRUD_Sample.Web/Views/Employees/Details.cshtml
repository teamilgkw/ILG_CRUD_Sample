@model ILG_CRUD_Sample.BusinessLogic.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Create Employee";
}
<div>
    <h2>Employee Details</h2>
</div>
<form asp-controller="Employees" asp-action="Details" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <input asp-for="ID" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" class="form-control" disabled="disabled" />
            </div>
        </div>
    </div>
    <br />
    <a asp-controller="Employees" asp-action="Index" class="btn btn-info"> Back</a>
    <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-info ">Back</a>
</form>
